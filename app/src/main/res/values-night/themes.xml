<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for night mode -->
    <style name="Theme.EarthQuiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/quiz_primary_light</item>
        <item name="colorPrimaryVariant">@color/quiz_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/quiz_secondary_light</item>
        <item name="colorSecondaryVariant">@color/quiz_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/quiz_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
    </style>
    
    <!-- Quiz specific styles for night mode -->
    <style name="QuizCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_dark</item>
    </style>
    
    <style name="QuizButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="QuizChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>