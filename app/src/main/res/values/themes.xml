<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.EarthQuiz" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/quiz_primary</item>
        <item name="colorPrimaryVariant">@color/quiz_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/quiz_secondary</item>
        <item name="colorSecondaryVariant">@color/quiz_secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/quiz_primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Quiz specific styles -->
    <style name="QuizCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>
    
    <style name="QuizButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="QuizChip" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>